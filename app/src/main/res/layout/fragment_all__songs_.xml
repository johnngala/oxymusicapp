<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:id="@+id/audio_item">

    <!--all songs heading -->
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="50sp"
    android:id="@+id/all_songs_heading"
    android:background="@color/colorPink"
    android:layout_marginBottom="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Songs"
        android:textColor="@color/colorAccent"
        android:id="@+id/all_songs"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center_horizontal"
        android:layout_centerInParent="true"
        />

</RelativeLayout>

    <!--actual items -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#111111"
        android:layout_below="@+id/all_songs_heading"
        android:layout_marginTop="5dp"
        android:id="@+id/items">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/music_img"
            android:src ="@mipmap/ic_launcher_round"
            android:padding="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/song_name"
            android:layout_toEndOf="@id/music_img"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorAccent"
            android:layout_toStartOf="@id/menuMore"
            android:id="@+id/music_file_name"
            />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/menuMore"
            android:src ="@drawable/ic_baseline_more"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            />

    </RelativeLayout>



</RelativeLayout>